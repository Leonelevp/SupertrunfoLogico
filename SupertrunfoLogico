#include <stdio.h>

int main()
{
    // Cidade 1 Sao Paulo
    char estado[50];
    char codigo[4];
    char nome[50];
    int populacao;
    float area; // Em km2
    float pib;  // Em Bilhoes de reais
    int turist; // Quantidade de Pontos Turisticos
    int escolhaJogador, escolhaAtributo, escolhaAtributo2, resultado1, resultado2;

    printf("***Jogo Supertrunfo***\n");
    printf("Escolha uma opcao:\n");
    printf("1. Jogar\n");
    printf("2. Regras \n");
    scanf("%d", &escolhaJogador);

    switch (escolhaJogador)
    {
    case 1:
        printf("Insira o Codigo da Cidade: \n");
        scanf("%s", codigo);

        printf("Insira o Codigo do Estado da Cidade: \n");
        scanf("%s", estado);

        printf("Insira o Nome da Cidade: \n");
        scanf("%s", nome);

        printf("Insira a Populacao da Cidade: \n");
        scanf("%d", &populacao);

        printf("Insira a Area da Cidade: \n");
        scanf("%f", &area);

        printf("Insira o PIB da Cidade: \n");
        scanf("%f", &pib);

        printf("Insira a Quantidade de Pontos Turisticos da Cidade: \n");
        scanf("%d", &turist);

        printf("Carta da Cidade 1\n");
        printf("Codigo da Carta: %s\n", codigo);
        printf("Estado: %s\n", estado);
        printf("Nome da Cidade: %s\n", nome);
        printf("Populacao: %d habitantes\n", populacao);
        printf("Area: %.2f Km2\n", area);
        printf("PIB: %.2f Bilhoes de Reais\n", pib);
        printf("Quantidade de Pontos Turisticos: %d\n", turist);
        printf("Densidade Populacional: %.2f h/Km2\n", populacao / area);
        printf("PIB per capta: %.2f reais\n", (pib * 1000000000) / populacao);
        printf("Super Poder: %.2f\n", (populacao + area + pib + turist + (1 / (populacao / area)) + (pib * 1000000000)));

        // Cidade 2 Rio de Janeiro

        char estado2[50];
        char codigo2[4];
        char nome2[50];
        int populacao2;
        float area2; // Em km2
        float pib2;  // Em Bilhoes de reais
        int turist2; // Quantidade de Pontos Turisticos

        printf("Insira o Codigo da Cidade: \n");
        scanf("%s", codigo2);

        printf("Insira o Codigo do Estado da Cidade: \n");
        scanf("%s", estado2);

        printf("Insira o Nome da Cidade: \n");
        scanf("%s", nome2);

        printf("Insira a Populacao da Cidade: \n");
        scanf("%d", &populacao2);

        printf("Insira a Area da Cidade: \n");
        scanf("%f", &area2);

        printf("Insira o PIB da Cidade: \n");
        scanf("%f", &pib2);

        printf("Insira a Quantidade de Pontos Turisticos da Cidade: \n");
        scanf("%d", &turist2);

        printf("Carta da Cidade 2\n");
        printf("Codigo da Carta: %s\n", codigo2);
        printf("Estado: %s\n", estado2);
        printf("Nome da Cidade: %s\n", nome2);
        printf("Populacao: %d habitantes\n", populacao2);
        printf("Area: %.2f Km2\n", area2);
        printf("PIB: %.2f Bilhoes de Reais\n", pib2);
        printf("Quantidade de Pontos Turisticos: %d\n", turist2);
        printf("Densidade Populacional: %.2f h/Km2\n", populacao2 / area2);
        printf("PIB per capta: %.2f reais\n", (pib2 * 1000000000) / populacao2);
        printf("Super Poder: %.2f\n", (populacao2 + area2 + pib2 + turist2 + (1 / (populacao2 / area2)) + (pib2 * 1000000000)));

        printf("Escolha uma opcao de atributo para comparar:\n");
        printf("1. Populacao\n");
        printf("2. Area\n");
        printf("3. PIB\n");
        printf("4. Quantidade de Pontos Turisticos\n");
        printf("5. Densidade Populacional\n");
        scanf("%d", &escolhaAtributo);

        switch (escolhaAtributo)
        {
        case 1:
            printf("Atributo Populacao\n");
            printf("Carta 1 %s Populacao: %d habitantes\n", nome, populacao);
            printf("Carta 2 %s Populacao: %d habitantes\n", nome2, populacao2);
            resultado1 = populacao > populacao2 ? 1 : 0;
            break;
        case 2:
            printf("Atributo Area\n");
            printf("Carta 1 %s Area: %.2f Km2\n", nome, area);
            printf("Carta 2 %s Area: %.2f Km2\n", nome2, area2);
            resultado1 = area > area2 ? 1 : 0;

            break;
        case 3:
            printf("Atributo PIB\n");
            printf("Carta 1 %s PIB: %.2f Bilhoes de Reais\n", nome, pib);
            printf("Carta 2 %s PIB: %.2f Bilhoes de Reais\n", nome2, pib2);
            resultado1 = pib > pib2 ? 1 : 0;
            break;
        case 4:
            printf("Atributo Pontos Turisticos\n");
            printf("Carta 1 %s Pontos Turisticos: %d\n", nome, turist);
            printf("Carta 2 %s Pontos Turisticos: %d\n", nome2, turist2);
            resultado1 = turist > turist2 ? 1 : 0;
            break;
        case 5:
            printf("Atributo Densidade Populacional\n");
            printf("Carta 1 %s Densidade Populacional: %.2f h/Km2\n", nome, populacao / area);
            printf("Carta 2 %s Densidade Populacional: %.2f h/Km2\n", nome2, populacao2 / area2);
            resultado1 = (populacao / area) < (populacao2 / area2) ? 1 : 0;

            break;

        default:
            printf("Opcao Invalida\n");
            break;
        }
        printf("Escolha uma opcao diferente de atributo para comparar:\n");
        printf("1. Populacao\n");
        printf("2. Area\n");
        printf("3. PIB\n");
        printf("4. Quantidade de Pontos Turisticos\n");
        printf("5. Densidade Populacional\n");
        scanf("%d", &escolhaAtributo2);

        if (escolhaAtributo == escolhaAtributo2)
        {
            printf("Voce escolheu o mesmo Atributo!\n");
        }
        else
        {
            switch (escolhaAtributo2)
            {
            case 1:
                printf("Atributo Populacao\n");
                printf("Carta 1 %s Populacao: %d habitantes\n", nome, populacao);
                printf("Carta 2 %s Populacao: %d habitantes\n", nome2, populacao2);
                resultado2 = populacao > populacao2 ? 1 : 0;

                break;
            case 2:
                printf("Atributo Area\n");
                printf("Carta 1 %s Area: %.2f Km2\n", nome, area);
                printf("Carta 2 %s Area: %.2f Km2\n", nome2, area2);
                resultado2 = area > area2 ? 1 : 0;

                break;
            case 3:
                printf("Atributo PIB\n");
                printf("Carta 1 %s PIB: %.2f Bilhoes de Reais\n", nome, pib);
                printf("Carta 2 %s PIB: %.2f Bilhoes de Reais\n", nome2, pib2);
                resultado2 = pib > pib2 ? 1 : 0;
                break;
            case 4:
                printf("Atributo Pontos Turisticos\n");
                printf("Carta 1 %s Pontos Turisticos: %d\n", nome, turist);
                printf("Carta 2 %s Pontos Turisticos: %d\n", nome2, turist2);
                resultado2 = turist > turist2 ? 1 : 0;
                break;
            case 5:
                printf("Atributo Densidade Populacional\n");
                printf("Carta 1 %s Densidade Populacional: %.2f h/Km2\n", nome, populacao / area);
                printf("Carta 2 %s Densidade Populacional: %.2f h/Km2\n", nome2, populacao2 / area2);
                resultado2 = (populacao / area) < (populacao2 / area2) ? 1 : 0;
                break;

            default:
                printf("Opcao Invalida\n");
                break;
            }
            if (resultado1 && resultado2)
            {
                printf("Parabens, A Carta 1 %s Venceu!\n", nome);
            }
            else if (resultado1 != resultado2)
            {
                printf("Empate!\n");
            }
            else
            {
                printf("Parabens, A Carta 2 %s Venceu!\n", nome2);
            }
        }
        break;

    case 2:
        printf("***Regras***\n");
        printf("A regra geral é: vence a carta com o maior valor no atributo escolhido. Porém, para a Densidade Populacional, a regra inverte: vence a carta com o menor valor.\n");
        break;

    default:
        printf("Opcao Invalida\n");
        break;
    }

    return 0;
}
